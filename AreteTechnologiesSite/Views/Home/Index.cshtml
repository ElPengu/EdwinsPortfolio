@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Arete Technologies</h1>
    <p>We are Arete Technologies, we will solve your biggest website problems using ASP.NET Core.</p>
    <p>Do not hesitate to contact us if you have anything you need for your website (or more)!</p>

    <!--Here is an email form, thanks FORMSUBMIT!-->
    <!--The HTML form template itself is taken from FORMSUBMIT-->
    <!--Note: When on a new host you must send an email so that you can verify for THAT host!-->
    <!--Time to send a message via this form: 6 seconds (inc. confirmation)-->
    <div class="container">
        <h1>Contact us</h1>
        <form target="_blank" action="https://formsubmit.co/734a71ba6bcf083231cf1317662a9f25" method="POST">
            <div class="form-group">
                <div class="form-row">
                    <div class="col">
                        <input type="text" name="name" class="form-control" placeholder="Full Name" required>
                    </div>
                    <div class="col">
                        <input type="email" name="email" class="form-control" placeholder="Email Address" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea placeholder="Your Message" class="form-control" name="message" rows="10" required></textarea>
            </div>
            <button type="submit" class="btn btn-lg btn-dark btn-block">Submit Form</button>
        </form>
    </div>
</div>


